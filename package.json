{
  "name": "LearnIT",
  "version": "1.0.0",
  "description": "A project that allows someone to learn about any topic using React, Electron, Flask, and AI.",
  "main": "main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all --serial build:react --parallel watch:react start:electron",
    "start:electron": "electron-forge start",
    "build": "npm run build:react",
    "build:react": "esbuild frontend/src/index.jsx --bundle --outdir=frontend/dist --entry-names=renderer --asset-names=assets/[name] --loader:.js=jsx --loader:.jsx=jsx --jsx=automatic --define:process.env.NODE_ENV=\\\"production\\\" --sourcemap",
    "watch:react": "esbuild frontend/src/index.jsx --bundle --outdir=frontend/dist --entry-names=renderer --asset-names=assets/[name] --loader:.js=jsx --loader:.jsx=jsx --jsx=automatic --define:process.env.NODE_ENV=\\\"development\\\" --sourcemap --watch",
    "package": "npm run build:react && npm run package-pyinstaller && NODE_TLS_REJECT_UNAUTHORIZED=0 electron-forge package",
    "make": "npm run build:react && npm run package-pyinstaller && NODE_TLS_REJECT_UNAUTHORIZED=0 electron-forge make",
    "package-pyinstaller": "cd backend && rm -rf build dist && ../.venv/bin/pyinstaller --onefile --name LearnIT-backend app.py",
    "postinstall": "patch-package"
  },
  "keywords": [],
  "author": "Eduardo Almeyda",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "latest",
    "@electron-forge/maker-dmg": "latest",
    "@electron-forge/maker-rpm": "latest",
    "@electron-forge/maker-squirrel": "latest",
    "@electron-forge/maker-zip": "latest",
    "electron": "^39.0.0",
    "esbuild": "^0.25.11",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.1"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "babel-runtime": "^6.26.0",
    "get-port": "^5.1.1",
    "gsap": "^3.13.0",
    "hls.js": "^1.6.13",
    "motion": "^12.23.24",
    "node-fetch": "^2.6.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": [
          "backend/dist/LearnIT-backend"
        ],
        "ignore": [
          "^\\/\\.venv($|\\/)",
          "^\\/backend\\/build($|\\/)",
          "^\\/backend\\/__pycache__($|\\/)",
          "^\\/backend\\/.*\\.py$",
          "^\\/backend\\/.*\\.spec$",
          "^\\/out($|\\/)",
          "^\\/node_modules\\/\\.cache($|\\/)"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "my_electron_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
